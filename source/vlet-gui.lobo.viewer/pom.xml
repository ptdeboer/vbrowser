<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <name>Lobo Viewer (${project.version})</name>
    <groupId>nl.esciencecenter.vlet</groupId>
    <artifactId>vlet-gui.lobo.viewer</artifactId>

    <parent>
        <groupId>nl.esciencecenter.vbrowser</groupId>
        <artifactId>vbrowser</artifactId>
        <version>1.9.0-SNAPSHOT</version>
        <relativePath>../../pom.xml</relativePath>
    </parent>

    <repositories>
        <repository>
            <id>lobo-local</id>
            <name>Lobo Local</name>
            <url>file:///${project.basedir}/maven2</url>
        </repository>
    </repositories>

    <build>
        <sourceDirectory>src</sourceDirectory>
        <testSourceDirectory>testsrc</testSourceDirectory>

        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
            </plugin>

            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <executions>
                    <execution>
                        <id>lobo-lib-ext</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <descriptors>
                                <descriptor>assembly/lobo-lib-ext.xml</descriptor>
                            </descriptors>
                        </configuration>
                    </execution>
                    <execution>
                        <id>plugin</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <descriptors>
                                <descriptor>assembly/plugin.xml</descriptor>
                            </descriptors>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

        </plugins>

    </build>
    <dependencies>
        <dependency>
            <groupId>nl.esciencecenter.vlet</groupId>
            <artifactId>vlet-vrs.core</artifactId>
            <version>${project.version}</version>
        </dependency>
        <!-- test only! -->
        <dependency>
            <groupId>nl.esciencecenter.vlet</groupId>
            <artifactId>vlet-gui.vbrowser</artifactId>
            <version>${project.version}</version>
        </dependency>
        <!-- lobo local jars! -->
        <dependency>
            <groupId>org.lobobrowser</groupId>
            <artifactId>lobo-patched</artifactId>
            <version>0.98.4</version>
        </dependency>
        <dependency>
            <groupId>org.lobobrowser</groupId>
            <artifactId>lobo-pub</artifactId>
            <version>0.98.4</version>
        </dependency>
        <dependency>
            <groupId>commons-logging</groupId>
            <artifactId>commons-logging</artifactId>
            <version>1.1.1</version>
        </dependency>
    </dependencies>

</project>
