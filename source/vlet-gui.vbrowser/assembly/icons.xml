<assembly>
    <id>icons</id>
    <formats>
        <format>jar</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>resources/icons/</directory>
            <!-- prepend with 'icons/' this makes it possible to create custom lib/icons/
                 subdirectory in distribution -->
            <outputDirectory>icons</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
            <fileMode>0644</fileMode>
        </fileSet>
    </fileSets>
</assembly>